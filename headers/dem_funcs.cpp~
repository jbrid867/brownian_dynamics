#include "headers/dem_funcs.h"


double dem_funcs::PBCswitch(int crowds, int index)
{
	double b;

	if(index<crowds){b=0;}
	else if(index>=crowds && index<2*crowds){b=-2;}
	else if(index>=2*crowds && index<3*crowds){b=2;}
	else if(index>=3*crowds && index<4*crowds){b=-2;}
	else if(index>=4*crowds && index<5*crowds){b=2;}
	
	else if(index>=5*crowds && index<6*crowds){b=-2;}
	else if(index>=6*crowds){b=2;}
	
	
	return b;
}
